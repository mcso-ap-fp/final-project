<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/cuisineSectionTitle"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    android:text="@string/cuisines"
    android:textSize="20sp"
    />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/cuisineOptions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/cuisineSectionTitle"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/priceTitle"
        app:layout_constraintTop_toBottomOf="@+id/cuisineOptions"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Price Range"
        android:textSize="20sp"
        />

    <Button
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/price0"
        app:layout_constraintHorizontal_weight="1"
        android:layout_marginRight="8dp"
        app:layout_constraintTop_toBottomOf="@+id/priceTitle"
        app:layout_constraintStart_toStartOf="parent"
        android:text="$"
        />


    <Button
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/price1"
        android:layout_marginRight="8dp"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintTop_toBottomOf="@+id/priceTitle"
        app:layout_constraintStart_toEndOf="@+id/price0"
        android:text="$$"
        />


    <Button
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/price2"
        android:layout_marginRight="8dp"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintTop_toBottomOf="@+id/priceTitle"
        app:layout_constraintStart_toEndOf="@+id/price1"
        android:text="$$$"
        />


    <Button
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/price3"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintTop_toBottomOf="@+id/priceTitle"
        app:layout_constraintStart_toEndOf="@+id/price2"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="$$$$"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/distanceTitle"
        app:layout_constraintTop_toBottomOf="@+id/price2"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Max Distance"
        android:textSize="20sp"
        />

    <com.google.android.material.slider.Slider
        android:id="@+id/distanceSlider"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:value="0"
        android:valueFrom="0"
        android:valueTo="50"
        android:stepSize="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/distanceTitle" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cancel"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintTop_toBottomOf="@+id/distanceSlider"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Cancel"
        />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/save"
        app:layout_constraintTop_toBottomOf="@+id/distanceSlider"
        app:layout_constraintStart_toEndOf="@+id/cancel"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Save"
        />

</androidx.constraintlayout.widget.ConstraintLayout>